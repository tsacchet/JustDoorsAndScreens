    <footer class="bg-white p-2 border border-dark shadow">
        <div class="clearfix">
            <span class="float-left"><img class="img-fluid" src="~/images/JustDoorsAndScreenTitle.PNG" style="width:120px;height:45px" /></span>
            <span class="float-right">&copy; @DateTime.Now.Year - JustDoorsAndScreens</span>
