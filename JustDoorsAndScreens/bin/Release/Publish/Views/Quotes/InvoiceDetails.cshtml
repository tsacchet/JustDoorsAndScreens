<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr>
            <th class="text-center">PRODUCT</th>
            <th class="text-center">UNIT</th>
            <th class="text-center">UNIT COST</th>
            <th class="text-center">AMOUNT</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var str in ViewBag.Doors)
        {
            if (str.Required == true)
            {
                <tr>
                    <td><strong>Security Door :</strong> @Html.Raw(str.DesignTypeName) -@Html.Raw(str.ColorTypeName) - @Html.Raw(str.LockTypeName) - @Html.Raw(str.DoorTypeName) </td>
                    <td>1</td>
                    <td>@Html.Raw(str.Cost) </td>
                    <td>@Html.Raw(str.Cost) </td>
                </tr>
            }
        }

        @foreach (var str in ViewBag.Sliders)
        {
            if (str.Required == true)
            {
                <tr>
                    <td><strong>Sliding Door :</strong> @Html.Raw(str.DesignTypeName) -@Html.Raw(str.ColorTypeName) - @Html.Raw(str.LockTypeName) - @Html.Raw(str.DoorTypeName) </td>
                    <td>1</td>
                    <td>@Html.Raw(str.Cost) </td>
                    <td>@Html.Raw(str.Cost) </td>
                </tr>
            }
        }

        @foreach (var str in ViewBag.FlyScreen)
        {
            if (str.Required == true)
            {
                <tr>
                    <td><strong>FlyScreen :</strong> @Html.Raw(str.FlyScreenName) - @Html.Raw(str.ColorTypeName)</td>
                    <td>@Html.Raw(str.Qty)</td>
                    <td>@Html.Raw(str.Cost)</td>
                    <td>@Html.Raw(str.Cost * str.Qty)</td>
                </tr>
            }
        }

        <tr class="border border-0">
            <td class="border border-0"></td>
            <td class="border border-0"></td>
            <td class="border border-0 text-right p-2"><strong>TOTAL</strong>(inclusive of GST)</td>
            <td class="border"><strong>$@Model.TotalCost</strong></td>
        </tr>
    </tbody>
</table>



