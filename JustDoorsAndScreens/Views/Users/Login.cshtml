@model JustDoorsAndScreens.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_login.cshtml";
}

@*<div class="container">*@
    @*<img class="mx-auto d-block img-fluid border border-secondary shadow" src="~/images/JustDoorsAndScreenTitle.PNG" />*@
    
    <br />
@*</div>*@


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="card mx-auto bg-white shadow">

    <div class="card-header bg-white">
        <img class="mx-auto d-block img-fluid" src="~/images/Signature.PNG" />
        <h4 class="mx-auto text-center display-4">Login</h4>
    </div>

    <div class="card-body">

        <h5 class="text-danger">@ViewBag.Message</h5>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <strong>@Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label " })</strong>

        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })



        <strong>@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })</strong>

        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

    </div>

    <div class="card-footer bg-white">
        <input type="submit" value="Login" class="btn btn-primary btn-block btn-lg" />
    </div>



</div>
}


