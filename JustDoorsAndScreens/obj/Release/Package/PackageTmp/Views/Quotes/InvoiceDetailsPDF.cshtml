<br />

<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>10 Baloo Crt</dt>
            <dt>Greensborough 3088</dt>
            <dt>0439 316 641</dt>
            <br />
            <dt>ABN: 45623876639</dt>
        </dl>
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>Date: @ViewBag.Date </dt>
            <dt>INVOICE # <span class="text-danger">@Model.QuoteID</span></dt>
            <dt>WORK ORDER # @Model.WorkOrder</dt>
        </dl>
    </div>
</div>






<div>
    <h3>BILL TO:</h3>
    <hr />
    <dl class="dl-horizontal">

        <div class="form-inline">
            <dt>
                @Html.DisplayNameFor(model => model.Customer):
            </dt>

            <dd class="m-1">
                @Html.DisplayFor(model => model.Customer)
            </dd>
        </div>

        <div class="form-inline">
            <dt>
                @Html.DisplayNameFor(model => model.Address):
            </dt>

            <dd class="m-1">
                @Html.DisplayFor(model => model.Address)
            </dd>
        </div>

        @*<dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>*@
        <div class="form-inline">
            <dt>
                @Html.DisplayNameFor(model => model.Telephone):
            </dt>

            <dd class="m-1">
                @Html.DisplayFor(model => model.Telephone)
            </dd>
        </div>

        <div class="form-inline">
            <dt>
                @Html.DisplayNameFor(model => model.Mobile):
            </dt>

            <dd class="m-1">
                @Html.DisplayFor(model => model.Mobile)
            </dd>
        </div>

        <div class="form-inline">
            <dt>
                @Html.DisplayNameFor(model => model.Email):
            </dt>

            <dd class="m-1">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </div>


    </dl>
</div>
<br />



<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr>
            <th class="text-center">PRODUCT</th>
            <th class="text-center">UNIT</th>
            <th class="text-center">UNIT COST</th>
            <th class="text-center">AMOUNT</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var str in ViewBag.Doors)
        {
            if (str.Required == true)
            {
                <tr>
                    <td><strong>Security Door :</strong> @Html.Raw(str.DesignTypeName) -@Html.Raw(str.ColorTypeName) - @Html.Raw(str.LockTypeName) - @Html.Raw(str.DoorTypeName) </td>
                    <td>1</td>
                    <td>@Html.Raw(str.Cost) </td>
                    <td>@Html.Raw(str.Cost) </td>
                </tr>
            }
        }

        @foreach (var str in ViewBag.Sliders)
        {
            if (str.Required == true)
            {
                <tr>
                    <td><strong>Sliding Door :</strong> @Html.Raw(str.DesignTypeName) -@Html.Raw(str.ColorTypeName) - @Html.Raw(str.LockTypeName) - @Html.Raw(str.DoorTypeName) </td>
                    <td>1</td>
                    <td>@Html.Raw(str.Cost) </td>
                    <td>@Html.Raw(str.Cost) </td>
                </tr>
            }
        }

        @foreach (var str in ViewBag.FlyScreen)
        {
            if (str.Required == true)
            {
                <tr>
                    <td><strong>FlyScreen :</strong> @Html.Raw(str.FlyScreenName) - @Html.Raw(str.ColorTypeName)</td>
                    <td>@Html.Raw(str.Qty)</td>
                    <td>@Html.Raw(str.Cost)</td>
                    <td>@Html.Raw(str.Cost * str.Qty)</td>
                </tr>
            }
        }

        <tr class="border border-0">
            <td class="border border-0"></td>
            <td class="border border-0"></td>
            <td class="border border-0 text-right p-2"><strong>Deposit</strong></td>
            <td class="border"><strong>$@Model.Deposit</strong></td>
        </tr>

        <tr class="border border-0">
            <td class="border border-0"></td>
            <td class="border border-0"></td>
            <td class="border border-0 text-right p-2"><strong>TOTAL</strong>(inclusive of GST)</td>

            @{
                var tc = @Model.TotalCost;
                var dp = @Model.Deposit;
                var tot = tc - dp;
            }

            <td class="border"><strong>$ @tot </strong></td>
        </tr>

        @{ if (Model.Paid != null)
            {
                if ((Boolean)Model.Paid)
                {
                    <tr class="border border-0">
                        <td class="border border-0"></td>
                        <td class="border border-0"></td>
                        <td class="border border-0"></td>
                        <td class="border">
                            <strong>
                                <h2 class="text-danger"> PAID </h2>
                            </strong>
                        </td>
                    </tr>
                }

            }
        }

    </tbody>
</table>






